    },
    "[models] ForeignKey": {
        "prefix": "foreignkey",
        "body": [
            "${1:field_name} = models.ForeignKey(",
            "\t${2:ModelName},",
            "\ton_delete=models.${3:CASCADE},",
            "\trelated_name=\"$1$4\",",
            "\thelp_text=\"$5\",",
            ")"
        ],
        "description": "A many-to-one relationship."
    },
    "[models] IntegerField": {
