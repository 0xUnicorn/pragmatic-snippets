{
    "[models] Model class": {
        "prefix": "model",
        "body": [
            "class ${1:ModelName}(models.Model):",
            "\t\"\"\"${2:Model for $1}$3.\"\"\"",
            "\n\t$4"
        ],
        "description": "A true/false field."
    },
    "[models] BooleanField": {
        "prefix": "booleanfield",
        "body": [
            "${1:field_name} = models.BooleanField(",
            "\tdefault=${2:False},",
            "\thelp_text=\"$3\",",
            ")"
        ],
        "description": "A true/false field."
    },
    "[models] CharField": {
        "prefix": "charfield",
        "body": [
            "${1:field_name} = models.CharField(",
            "\tmax_length=${2:254},",
            "\thelp_text=\"$3\",",
            ")"
        ],
        "description": "A string field, for small- to large-sized strings."
    },
    "[models] DateField": {
        "prefix": "datefield",
        "body": [
            "${1:field_name} = models.DateField(",
            "\tauto_now$2=${3:True},",
            "\thelp_text=\"Date for $4\",",
            ")"
        ],
        "description": "A date."
    },
    "[models] DateTimeField": {
        "prefix": "datetimefield",
